@page
@model IndexModel
@{
    ViewData["Title"] = "Allegiant";
}

@section scripts{
<script>
        $("button[onclick='#top']").click(function() {
      $("html, body").animate({ scrollTop: 0 }, "slow");
      return false;
    });
</script>
}


<button class="scroll" onclick=#top>
    <div class="arrow-up"><i class="fa fa-arrow-up fa-2x"></i></div>
</button>

<div class="FadeIn" style="padding: 5%; text-align: center">
